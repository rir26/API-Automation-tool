{
  "openapi": "3.0.1",
  "info": {
    "title": "Mavim Manager Filtered APIs",
    "description": "Filtered endpoints: only those GET methods accepting a single databaseId parameter, or requiring no input parameters.",
    "version": "v1"
  },
  "servers": [
    {
      "url": "https://dev-api.mavimcloud.com/connectread/v2"
    }
  ],
  "paths": {
    "/databases/{databaseId}/users": {
      "get": {
        "tags": ["Databases"],
        "summary": "Gets all users with access to the database",
        "parameters": [
          {
            "name": "databaseId",
            "in": "path",
            "required": true,
            "description": "GUID of the required database.",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/IUser" }
                }
              }
            }
          }
        }
      }
    },
    "/databases/{databaseId}/groups": {
      "get": {
        "tags": ["Databases"],
        "summary": "Gets all groups with access rights to the database",
        "parameters": [
          {
            "name": "databaseId",
            "in": "path",
            "required": true,
            "description": "GUID of the required database.",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/IGroup" }
                }
              }
            }
          }
        }
      }
    },
    "/databases/{databaseId}/users/me/groups": {
      "get": {
        "tags": ["Databases"],
        "summary": "Gets the groups you're a member of with access rights to the database",
        "parameters": [
          {
            "name": "databaseId",
            "in": "path",
            "required": true,
            "description": "GUID of the required database.",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/IGroup" }
                }
              }
            }
          }
        }
      }
    },
    "/applications/me": {
      "get": {
        "tags": ["Applications"],
        "summary": "Get information about yourself",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/IApplication" }
              }
            }
          }
        }
      }
    },
    "/databases": {
      "get": {
        "tags": ["Databases"],
        "summary": "Gets a list of all databases your company owns",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/IDatabaseShort" }
                }
              }
            }
          }
        }
      }
    },
    "/groups": {
      "get": {
        "tags": ["Groups"],
        "summary": "Gets all groups that belong to your company",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/IGroup" }
                }
              }
            }
          }
        }
      }
    },
    "/me": {
      "get": {
        "tags": ["Me"],
        "summary": "Get information about yourself",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/IClient" }
              }
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["Users"],
        "summary": "Get all users in your company",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/IUser" }
                }
              }
            }
          }
        }
      }
    },
    "/me/company": {
      "get": {
        "tags": ["Users"],
        "summary": "Gets information about your company",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ICompany" }
              }
            }
          }
        }
      }
    },
    "/me/groups": {
      "get": {
        "tags": ["Users"],
        "summary": "Gets all groups you're a member of",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
