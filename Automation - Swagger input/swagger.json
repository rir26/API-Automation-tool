                }
              }
            }
          }
        }
      }
    },
    "/me/databases": {
      "get": {
        "tags": ["Users"],
        "summary": "Gets all databases you have access to",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/IDatabaseShort" }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "IDatabaseShort": {
        "type": "object",
        "properties": {
          "databaseID": {"type": "string", "format": "uuid"},
          "displayName": {"type": "string", "nullable": true},
          "companyId": {"type": "string", "format": "uuid"},
          "isPrivate": {"type": "boolean"},
          "primaryRegion": {"type": "string", "nullable": true}
        }
      },
      "IApplication": {
        "type": "object",
        "properties": {
          "appId": {"type": "string", "format": "uuid"},
          "objectId": {"type": "string", "format": "uuid"},
          "id": {"type": "string", "format": "uuid"},
          "sub": {"type": "string", "nullable": true},
          "created": {"type": "string", "format": "date-time"},
          "groups": {"type": "array", "items": {"type": "string", "format": "uuid"}, "nullable": true},
          "companyId": {"type": "string", "format": "uuid"}
        }
      },
      "IClient": {
        "type": "object",
        "properties": {
          "id": {"type": "string", "format": "uuid"},
          "sub": {"type": "string", "nullable": true},
          "created": {"type": "string", "format": "date-time"},
          "groups": {"type": "array", "items": {"type": "string", "format": "uuid"}, "nullable": true},
          "companyId": {"type": "string", "format": "uuid"}
        }
      },
      "ICompany": {
        "type": "object",
        "properties": {
          "id": {"type": "string", "format": "uuid"},
          "name": {"type": "string", "nullable": true},
          "domain": {"type": "string", "nullable": true},
          "issuers": {"type": "array", "items": {"type": "string"}, "nullable": true},
          "tenantId": {"type": "string", "format": "uuid"},
          "disabled": {"type": "boolean"},
          "exactId": {"type": "integer", "format": "int32", "nullable": true}
        }
      },
      "IGroup": {
        "type": "object",
        "properties": {
          "id": {"type": "string", "format": "uuid"},
          "name": {"type": "string", "nullable": true},
          "description": {"type": "string", "nullable": true},
          "companyId": {"type": "string", "format": "uuid"},
          "databaseId": {"type": "string", "format": "uuid", "nullable": true},
          "users": {"type": "array", "items": {"type": "string", "format": "uuid"}, "nullable": true}
        }
      },
      "IUser": {
        "type": "object",
        "properties": {
          "email": {"type": "string", "nullable": true},
          "firstName": {"type": "string", "nullable": true},
          "lastName": {"type": "string", "nullable": true},
          "id": {"type": "string", "format": "uuid"},
          "sub": {"type": "string", "nullable": true},
          "created": {"type": "string", "format": "date-time"},
          "groups": {"type": "array", "items": {"type": "string", "format": "uuid"}, "nullable": true},
          "companyId": {"type": "string", "format": "uuid"}
        }
      }
    }
  }
}
